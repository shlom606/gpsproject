<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/starbackground"
    android:layout_height="match_parent"
    tools:context=".DemoGame">

    <ImageView
        android:id="@+id/jcircle"
        android:layout_width="147dp"
        android:layout_height="150dp"
        android:background="@drawable/jedicircle"
        ></ImageView>


    <ImageView
        android:id="@+id/charac"
        android:layout_width="135dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"></ImageView>

    <TextView
        android:id="@+id/username"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_below="@id/jcircle"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"></TextView>

    <Button
        android:id="@+id/retreg"
        android:text="return to registration"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/charac"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="222dp"></Button>

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="391dp"
        android:layout_height="61dp"
        android:layout_below="@+id/username"
        android:layout_centerVertical="true"
        android:layout_marginTop="1dp"
        android:text="Location: "
        android:textSize="20sp" />


</RelativeLayout>